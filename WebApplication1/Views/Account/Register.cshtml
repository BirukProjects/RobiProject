@model WebApplication1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="zone-content equalize zone clearfix">

    <div class="content-container container-16">

        <div class="our-directory block">
            <div class="block-title">
                <h2>Create a New Account</h2>
            </div>


            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "subscription-table", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="subscription-options">
                    <div class="subscription-column" style="min-height: 232px;width: 100%;">
                        <div class="subscription-header">
                            <i class="glyphicon glyphicon-user text-colorful"></i>&nbsp;&nbsp;<span class="">Please fill the following information</span>
                        </div>
                        @Html.ValidationSummary()
                        <div class="subscription-body">
                            <div class="row center-block">
                                <div class="col-md-7 col-md-offset-1">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "text-input-grey", @placeholder = "User Name", @style = "border-radius: 5px;" })
                                </div>
                                <div class="col-md-7 col-md-offset-1">
                                    @Html.TextBoxFor(m => m.UserEmail, new { @class = "text-input-grey", @placeholder = "Email", @style = "border-radius: 5px;" })
                                </div>
                                @*<div class="col-md-7 col-md-offset-1">
                                    @Html.HiddenFor(m => m.PackageId, new { @class = "text-input-grey", @placeholder = "Package Id", @style = "border-radius: 5px;" })
                                </div>*@
                                <div class="col-md-7 col-md-offset-1">
                                    @Html.PasswordFor(m => m.Password, new { @class = "text-input-grey", @placeholder = "Password", @style = "border-radius: 5px;" })
                                </div>
                                <div class="col-md-7 col-md-offset-1">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-input-grey", @placeholder = "Confirm Password", @style = "border-radius: 5px;" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="subscription-footer">
                    <div class="subscription-background">
                        <div class="subscription-button-wrapper">
                            <input type="submit" class="button-colorful" value="Register" />
                        </div>
                    </div>
                </div>
            }
        </div>
        @*@section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }*@
    </div>

